{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "3.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "notifications",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["detection-utils.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "commands": {
    "save-smart": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "__MSG_commands.smartDesc__"
    },
    "save-txt": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "__MSG_commands.txtDesc__"
    },
    "save-md": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "__MSG_commands.mdDesc__"
    },
    "save-pdf": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "__MSG_commands.pdfDesc__"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "author": "Benjamin Poersch",
  "homepage_url": "https://github.com/benjiyo/flashdoc"
}
